<h2>Edit Recipient</h2>
<%= form_for [:admin, :charity, @recipient], :url => admin_charity_recipient_path(@recipient.charity.slug, @recipient) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :description %>
<%= f.text_field :description %>
<%= f.submit "Update Recipient" %>
<% end %>
