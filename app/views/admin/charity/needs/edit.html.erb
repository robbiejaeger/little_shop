<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
        <div class="panel-heading edit-need-heading">
          <h2>Edit Need</h2>
        </div>
        <div class="panel-body">
          <%= form_for [:admin, :charity, @need], :url => admin_charity_need_path(@need.charity.slug, @need) do |f| %>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_field :description, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :price %>
              <%= f.text_field :price, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :needs_category %>
              <%= select(:need, :needs_category_id, @needs_category_options) %>
            </div>
            <div class="form-group">
              <%= f.submit %>
            </div>
            <% end %>
        </div>
      </div>
    </div>
</div>
